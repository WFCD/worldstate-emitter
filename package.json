{
  "name": "worldstate-emitter",
  "version": "0.0.0-dev",
  "description": "Event emitter for worldstate & other warframe events",
  "main": "index.js",
  "scripts": {
    "test": "c8 mocha",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "coverage": "npm test && npm run report | coveralls",
    "build:docs": "jsdoc -c jsdoc-config.json -d docs",
    "dev": "nodemon test/tester.js",
    "postinstall": "install-peerdeps @wfcd/eslint-config@latest -S",
    "report": "c8 report --reporter=text-lcov",
    "validate": "npm ls"
  },
  "directories": {
    "test": "test/specs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wfcd/worldstate-emitter.git"
  },
  "keywords": [
    "warframe",
    "worldstate",
    "event",
    "emitter"
  ],
  "author": "tobiah <tobiah@protonmail.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/wfcd/worldstate-emitter/issues"
  },
  "homepage": "https://wfcd.github.io/worldstate-emitter/",
  "dependencies": {
    "cron": "^3.1.6",
    "rss-feed-emitter": "^3.2.2",
    "twitter": "^1.7.1"
  },
  "devDependencies": {
    "@wfcd/eslint-config": "^1.3.3",
    "c8": "^9.1.0",
    "chai": "^4.3.4",
    "coveralls": "^3.1.0",
    "install-peerdeps": "^3.0.3",
    "mocha": "^10.0.0",
    "nodemon": "^3.0.3"
  },
  "peerDependencies": {
    "warframe-worldstate-data": "^2.x",
    "warframe-worldstate-parser": "^3.x"
  },
  "optionalDependencies": {
    "colors": "^1.4.0",
    "winston": "^3.3.3"
  },
  "engines": {
    "node": ">= 18.19.0"
  },
  "eslintIgnore": [
    ".github/**",
    "docs/**",
    "resources/**",
    "types/**"
  ],
  "eslintConfig": {
    "extends": "@wfcd/eslint-config/esm",
    "parser": "@babel/eslint-parser",
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 6,
      "ecmaFeatures": {
        "modules": true
      }
    },
    "rules": {
      "no-underscore-dangle": "off"
    }
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "plugins": [
      "@babel/plugin-transform-class-properties",
      "@babel/plugin-transform-private-methods"
    ]
  },
  "pre-commit": [
    "lint",
    "test",
    "validate"
  ],
  "prettier": "@wfcd/eslint-config/prettier",
  "nodemonConfig": {
    "delay": 5000,
    "env": {
      "LOG_LEVEL": "debug",
      "CACHE_TIMEOUT": 60000,
      "SEMLAR_TIMEOUT": 300000
    }
  },
  "mocha": {
    "timeout": 20000,
    "exit": true,
    "spec": "test/specs/**/*.spec.js"
  },
  "c8": {
    "reporter": [
      "lcov",
      "text"
    ],
    "skip-full": true
  },
  "type": "module"
}
