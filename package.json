{
  "name": "worldstate-emitter",
  "version": "0.0.0-dev",
  "description": "Event emitter for worldstate & other warframe events",
  "main": "index.js",
  "scripts": {
    "test": "nyc mocha",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "coverage": "npm test && nyc report --reporter=text-lcov | coveralls",
    "build-docs": "jsdoc -c jsdoc-config.json -d docs",
    "dev": "nodemon test/tester.js",
    "postinstall": "install-peerdeps @wfcd/eslint-config@^1.3.3 -S"
  },
  "directories": {
    "test": "test/specs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wfcd/worldstate-emitter.git"
  },
  "keywords": [
    "warframe",
    "worldstate",
    "event",
    "emitter"
  ],
  "author": "tobiah <tobiah@protonmail.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/wfcd/worldstate-emitter/issues"
  },
  "homepage": "https://wfcd.github.io/worldstate-emitter/",
  "dependencies": {
    "json-fetch-cache": "^1.2.6",
    "rss-feed-emitter": "^3.2.2",
    "twitter": "^1.7.1"
  },
  "devDependencies": {
    "@wfcd/eslint-config": "^1.3.3",
    "chai": "^4.3.4",
    "coveralls": "^3.1.0",
    "install-peerdeps": "^2.0.3",
    "mocha": "^10.0.0",
    "nodemon": "^3.0.2",
    "nyc": "^15.1.0"
  },
  "peerDependencies": {
    "warframe-worldstate-data": "^1.x",
    "warframe-worldstate-parser": "^2.x"
  },
  "optionalDependencies": {
    "colors": "^1.4.0",
    "winston": "^3.3.3"
  },
  "engines": {
    "node": ">=10.19.0"
  },
  "eslintIgnore": [
    ".github/**",
    "docs/**",
    "resources/**",
    "types/**"
  ],
  "eslintConfig": {
    "extends": "@wfcd",
    "parser": "@babel/eslint-parser",
    "parserOptions": {
      "sourceType": "script"
    },
    "rules": {
      "valid-jsdoc": [
        "error",
        {
          "requireReturn": false,
          "requireReturnDescription": false,
          "preferType": {
            "String": "string",
            "Number": "number",
            "Boolean": "boolean",
            "Function": "function",
            "object": "Object",
            "date": "Date",
            "error": "Error"
          },
          "prefer": {
            "return": "returns"
          }
        }
      ],
      "no-underscore-dangle": "off",
      "import/no-extraneous-dependencies": [
        "error",
        {
          "peerDependencies": true
        }
      ]
    }
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties",
      "@babel/plugin-proposal-private-methods"
    ]
  },
  "pre-commit": [
    "lint",
    "test",
    "validate"
  ],
  "prettier": "@wfcd/eslint-config/prettier",
  "nodemonConfig": {
    "delay": 5000,
    "env": {
      "LOG_LEVEL": "debug",
      "CACHE_TIMEOUT": 60000,
      "SEMLAR_TIMEOUT": 300000
    }
  },
  "mocha": {
    "exit": true,
    "spec": "test/specs/**/*.spec.js"
  },
  "nyc": {
    "reporter": [
      "lcov",
      "text"
    ],
    "skip-full": true
  }
}
